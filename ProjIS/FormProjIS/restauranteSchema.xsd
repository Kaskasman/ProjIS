<?xml version="1.0" encoding="utf-8"?>
<xs:schema attributeFormDefault="unqualified"
 elementFormDefault="qualified"
 xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <!-- Restriçoes -->

  

  <!-- Simple Type -->

  <xs:simpleType name="nomeType">
    <xs:restriction base="xs:string"/>
  </xs:simpleType>

  <xs:simpleType name="kcalType">
    <xs:restriction base="xs:string"/>
  </xs:simpleType>

  <xs:simpleType name="quantidadeType">
    <xs:restriction base="xs:string"/>
  </xs:simpleType>
  
  <!-- Schema -->

  <xs:complexType name="pratoType">
    <xs:sequence>
      <xs:element name="nome" type="nomeType"/>
      <xs:element name="kcal" type="kcalType"/>
      <xs:element name="quantidade" type="quantidadeType"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="restauranteType">
    <xs:sequence>
      <xs:element name="prato" type="pratoType" minOccurs="0" maxOccurs ="unbounded"/>
    </xs:sequence>
    <xs:attribute name="nomeRestaurante" type="xs:string"/>
  </xs:complexType>

  <xs:complexType name="restaurantesType">
    <xs:sequence>
      <xs:element name="restaurante" type="restauranteType" minOccurs="0" maxOccurs ="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <!-- Root -->

  <xs:element name="restaurantes" type="restaurantesType"/>

</xs:schema>